<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="stock_production_lot_form" model="ir.ui.view">
        <field name="name">Stock production lot form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']/group[last()]" position="inside">
                <field name="partner_id" />
                <field name="sale_order_id" />
                <field name="incident_number" />
                <field name="store_number" />
                <field name="customer_part_number" />
                <field name="boxed_tracking_number" />
                <field name="condition_id" />
            </xpath>
        </field>
    </record>
</odoo>
